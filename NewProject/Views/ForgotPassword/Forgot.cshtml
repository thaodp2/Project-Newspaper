@model NewProject.Models.forgotModel
@{
    ViewBag.Title = "Forgot";
}

<div class="form-gap"></div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <p>You can reset your password here.</p>

                        @using (Html.BeginForm())
                        {
                            <div class="panel-body">

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        <
                                    </div>
                                </div>
                                <label for="exampleInputPassword1" class="text-uppercase"> Username</label>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", placehold = "Username" } })
                                </div>
                                <label for="exampleInputPassword1" class="text-uppercase"> Security Answer</label>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.securityAnswer, new { htmlAttributes = new { @class = "form-control", placehold = "securityAnswer" } })
                                </div>
                                <label for="exampleInputPassword1" class="text-uppercase"> New password</label>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placehold = "New Password" } })
                                </div>
                                <label for="exampleInputPassword1" class="text-uppercase"> confirm new password</label>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.repassword, new { htmlAttributes = new { @class = "form-control", placehold = "New Password" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                                <label class="alert-success"> @ViewBag.resetSuccess</label>
                                <label class="alert-danger"> @ViewBag.resErro</label>
                            </div>


                            <input type="hidden" class="hide" name="token" id="token" value="">

                        }
                        <a href="@Url.Action("Login","Login")">
                            <button id="btn-login">Login</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

