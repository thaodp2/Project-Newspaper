<body>

    <div class="tm-main">
        <div class="container text-center tm-welcome-container">
            <div class="tm-welcome">
                <i class="fas tm-fa-big fa-music tm-fa-mb-big"></i>
                <h1 class="text-uppercase mb-3 tm-site-name">Edit News</h1>
                <h4 style="font-style:italic; font-weight: lighter;">All new information entered must be valid </h4>
                <p class="tm-site-description"></p>
            </div>
        </div>

    </div>

    <div class="row tm-mt-big tm-about-row tm-mb-medium">
        <div class="col-xl-12 col-lg-12 col-md-12 col-xs-12 tm-contact-col">
            <div class="tm-bg-gray tm-contact-middle" style="margin-right: auto; margin-left: auto;">
                @using (Html.BeginForm("EditInput", "Home"))
                {
                    <input hidden type="text" id="idNews" name="idNews" class="form-control" placeholder="idNews" required=""
                           pattern=".*\S+.*"
                           title="The title should not be blank" maxlength="50" value="@newChoice.newID">
                    <div class="form-group mb-4">
                        Title:
                        <input type="text" id="title" name="title" class="form-control" placeholder="Title" required=""
                               pattern=".*\S+.*"
                               title="The title should not be blank" maxlength="50" value="@newChoice.title">
                    </div>

                    <div class="form-group mb-4">
                        Category:

                        <div class="form-group mb-4">
                            <select name="categolySelect" class="tm-select" id="categolySelect" required="">
                                <option value="Science"> Science</option>
                                <option value="Technology"> Technology</option>
                                <option value="Social media"> Social media</option>
                                <option value="Car news"> Car news</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        Image:
                        <input type="text" id="image" name="image" class="form-control" placeholder="Input link image" required=""
                               pattern=".*\S+.*"
                               title="The link image should not be blank" value="@newChoice.imageNew">
                    </div>


                    <div class="form-group mb-4" style="column-width:200px">
                        Description:
                        <textarea rows="8" id="description" name="description" class="form-control" placeholder="Your description" required=""
                                  pattern=".*\S+.*"
                                  title="The description should not be blank">@newChoice.description</textarea>
                        @*@Html.TextAreaFor(model => model.description, 10, 80, new { htmlAttributes = new { @class = "form-control" } })*@
                        @*<textarea rows="8" id="contact_message" name="contact_message" class="form-control" placeholder="Your Message" required></textarea>*@
                    </div>
                    <div class="form-group mb-0">
                        <button type="submit" class="btn btn-secondary">Submit</button>
                    </div>
                }
            </div>

        </div>
    </div>
    </div> <!-- .container -->
    </div> <!-- .main -->
    <!-- load JS -->
</body>

